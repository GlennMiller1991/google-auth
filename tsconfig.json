{
    "compilerOptions": {
        "target": "esnext",

        "module": "node18",
        "moduleResolution": "node16",
        
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true,

        "declaration": true,
        "sourceMap": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist/bin",
        "removeComments": false,

        "noEmitOnError": true,
    },
    "exclude": [
        "/node_modules/",
        "/dist/"
    ]
}