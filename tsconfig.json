{
    "compilerOptions": {
        "target": "esnext",

        "module": "Node18",
        "moduleResolution": "node16",

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true,
        "strictNullChecks": true,

        "declaration": true,
        "sourceMap": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist/bin",
        "removeComments": false,

        "noEmitOnError": true
    },
    "exclude": [
        "/node_modules/",
        "/dist/"
    ]
}